# Hickory DNS Production Environment Template
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Generate these with secure random values
# =============================================================================

# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Database password (must match POSTGRES_PASSWORD in db.env)
DATABASE_PASSWORD=your-strong-database-password

# Admin password for the control panel
ADMIN_PASSWORD=your-strong-admin-password

# =============================================================================
# REQUIRED - Update these values for your deployment
# =============================================================================

# PostgreSQL
POSTGRES_PASSWORD=your-strong-database-password

# API Base URL (use internal network URL in production)
# For production behind a reverse proxy, use: https://your-domain.com
API_BASE_URL=http://localhost:8080

# =============================================================================
# OPTIONAL - Customize these for your deployment
# =============================================================================

# Port configurations
UI_PORT=8081
DNS_PORT=5353
DOT_PORT=853

# Admin username (optional - default is 'admin')
ADMIN_USERNAME=admin

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
